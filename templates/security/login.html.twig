<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Connexion
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
																																																																																																																																																																																																																																														           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		{% block body %}
			<div class="container ">
				<div class="row mt-5">
					<div class="col-lg-1"></div>
					<div class="col-lg-5 mt-5">
						<img class="mt-5" src="img/img2.png"><br>
						<div class="text-center">
							<a href="{{path('security_register')}}" class="text-muted">Cr√©er un compte</a>
						</div>
					</div>
					<div class="col-lg-5 mt-5">
						<h3 class="fw-normal  link-danger mt-5">Connexion</h3>
						<br>
						<form method="post">

							<div class="col">
								<div>
									<label for="exampleFormControlInput1" class="form-label">Adresse email</label>
								</div>
								<div class="mb-3">
									<input type="email" class="form-control" name="_username">
								</div>
								<div>
									<label for="exampleFormControlTextarea1" class="form-label">Mot de passe</label>
								</div>
								<div class="mb-3">
									<input class="form-control" type="Password" name="_password">
								</div>
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
								{% if error %}
									<p>
										<small class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</small>
									</p>
								{% endif %}
								<br>
								<div class="text-center">
									<button type="submit" class="btn btn-danger">
										Connexion
									</button>
								</div>
							</div>
						</form>
					</div>

				</div>
			</div>
		{% endblock %}
	</body>
</html>
